<Window x:Class="WpfApp13.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp13"
        mc:Ignorable="d"
        Title="Login" Height="800" Width="1600"
        ResizeMode="NoResize"
        Topmost="False" WindowState="Normal" MouseMove="Window_MouseMove">
    <Window.Resources>
        <BitmapImage x:Key="IfrocéanLogo" UriSource="/Ifrocéan.png"></BitmapImage>
    </Window.Resources>
    <Grid>
        <Image Height="800" Width="1600" VerticalAlignment="Top" Source="{StaticResource ResourceKey=IfrocéanLogo}"></Image>
        <Label Name="Explication" Content="Ceci devrait être le login" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Margin="100,10,100,10" FontSize="22" FontFamily="Bauhaus 93"/>
        <Button x:Name="goaccueil_bouton" Content="Se connecter" MouseDoubleClick="goaccueil_bouton_MouseDoubleClick" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="1" Margin="0,25,0,25" Width="150" Height="50" Background="LightBlue" FontSize="18">
        </Button>
    </Grid>


</Window>
